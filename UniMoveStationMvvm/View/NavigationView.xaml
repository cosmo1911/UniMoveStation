<UserControl x:Class="UniMoveStation.View.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:local="clr-namespace:UniMoveStation"
             xmlns:model="clr-namespace:UniMoveStation.Model"
             xmlns:vm="clr-namespace:UniMoveStation.ViewModel"
             xmlns:v="clr-namespace:UniMoveStation.View"
             xmlns:helper="clr-namespace:UniMoveStation.Helper"
             xmlns:ignore="http://www.ignore.com"
             mc:Ignorable="d ignore"
             DataContext="{Binding Navigation, Source={StaticResource ViewModelLocator}}">
    <!--Converter={StaticResource BooleanToVisibilityConverter}-->

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:SingleCameraViewModel}"
                      x:Key="SingleCameraTemplate">
            <v:SingleCameraView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AllCamerasViewModel}"
                      x:Key="AllCamerasTemplate">
            <v:AllCamerasView DataContext="{Binding}"/>
        </DataTemplate>

        <helper:MyDataTemplateSelector x:Key="MyDataTemplateSelector"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Navigation Panel-->
        <StackPanel Orientation="Vertical">
            <!--Controllers-->
            <Expander FlowDirection="RightToLeft" 
                      Padding="-1" 
                      Margin="0 0 0 0" 
                      BorderThickness="1"
                      BorderBrush="{StaticResource AccentColorBrush}">
                <Expander.Header>

                    <!--All Controllers-->
                    <Button FlowDirection="LeftToRight"
                            BorderThickness="0"
                            Background="{StaticResource AccentColorBrush}"
                            Foreground="{StaticResource IdealForegroundColorBrush}"
                            Style="{DynamicResource FlatButtonStyle}"
                            Command="{Binding SelectTabCommand}"
                            CommandParameter="{Binding }">


                        <StackPanel Orientation="Horizontal">
                            <!--Controller Icon-->
                            <svgc:SvgViewbox Source="Resources/PlayStationCircle.svg"
                                             Height="19"
                                             Width="19"
                                             Margin="3 0 3 0"
                                             />
                            <!--Controllers Label-->
                            <TextBlock Text="CONTROLLERS" 
                                       VerticalAlignment="Center"
                                />
                        </StackPanel>
                    </Button>
                </Expander.Header>
                <!--Controller Tabs-->
                <controls:MetroTabControl TabStripPlacement="Left"
                                          FlowDirection="LeftToRight">

                </controls:MetroTabControl>
            </Expander>
            <!--Cameras-->
            <Expander FlowDirection="RightToLeft"
                      Padding="-1" 
                      Margin="0 0 0 0" 
                      BorderThickness="1"
                      BorderBrush="{StaticResource AccentColorBrush}">
                <Expander.Header>

                    <!--All Cameras-->
                    <Button FlowDirection="LeftToRight"
                            BorderThickness="0"
                            Padding="0"
                            BorderBrush="Transparent"
                            Background="{StaticResource AccentColorBrush}"
                            Foreground="{StaticResource IdealForegroundColorBrush}"
                            Style="{DynamicResource FlatButtonStyle}">

                        <StackPanel Orientation="Horizontal">
                            <!--Camera Icon-->
                            <svgc:SvgViewbox Source="Resources/PlayStationX.svg"
                                             Height="19"
                                             Width="19"
                                             Margin="3 0 3 0"
                                             />
                            <!--Cameras Label-->
                            <TextBlock Text="CAMERAS" 
                                       VerticalAlignment="Center"
                                />
                        </StackPanel>
                    </Button>
                </Expander.Header>
                <!--Camera Tabs-->
                <controls:MetroTabControl TabStripPlacement="Left"
                                          FlowDirection="LeftToRight"
                                          ItemsSource="{Binding SingleCameras}">

                    <controls:MetroTabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </controls:MetroTabControl.ItemTemplate>
                    <controls:MetroTabControl.ContentTemplate>
                        <DataTemplate>
                            
                        </DataTemplate>
                    </controls:MetroTabControl.ContentTemplate>

                </controls:MetroTabControl>
            </Expander>
            <!--Server-->
            <Expander FlowDirection="RightToLeft"
                      Padding="-1" 
                      Margin="0 0 0 0" 
                      BorderThickness="1"
                      BorderBrush="{StaticResource AccentColorBrush}">
                <Expander.Header>

                    <!--Server-->
                    <Button FlowDirection="LeftToRight"
                            BorderThickness="0"
                            Padding="0"
                            BorderBrush="Transparent"
                            Background="{StaticResource AccentColorBrush}"
                            Foreground="{StaticResource IdealForegroundColorBrush}"
                            Style="{DynamicResource FlatButtonStyle}">

                        <StackPanel Orientation="Horizontal">
                            <!--Server Icon-->
                            <svgc:SvgViewbox Source="Resources/PlayStationTriangle.svg"
                                             Height="19"
                                             Width="19"
                                             Margin="3 0 3 0"
                                             />
                            <!--Server Label-->
                            <TextBlock Text="SERVER" 
                                       VerticalAlignment="Center"
                                />
                        </StackPanel>
                    </Button>
                </Expander.Header>
                <!--Client Tabs-->
                <controls:MetroTabControl TabStripPlacement="Left"
                                          FlowDirection="LeftToRight">

                </controls:MetroTabControl>
            </Expander>

        </StackPanel>

        <!--Main Tabs Control-->
        <controls:MetroTabControl Visibility="Visible"
                                  Grid.Column="1"
                                  Grid.Row="0">
            <!--<controls:MetroTabItem>
                <Grid>
                    -->
            <!--Home Tab-->
            <!-- 
                </Grid>
            </controls:MetroTabItem>-->

            <!--Main Controllers Tab-->
            <controls:MetroTabItem Visibility="Visible"
                                   Header="Controllers">
                <controls:MetroTabControl>
                    <!--All Moves Tab-->
                    <controls:MetroTabItem Header="All"
                                               x:Name="main_tab_controllers_all">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto" MinHeight="5"/>
                                <RowDefinition Height="Auto" MinHeight="80"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <Grid x:Name="grid_allMoves">
                                    <!--All Moves-->
                                </Grid>
                            </ScrollViewer>

                            <GridSplitter Grid.Row="1" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Stretch" 
                                              MinHeight="5" 
                                              Width="100"
                                              ShowsPreview="True" 
                                              ResizeDirection="Rows"
                                    />

                            <Grid Grid.Row="2">
                                <!--All Moves Console-->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" 
                                           Text="Console" 
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Bottom" 
                                           Margin="5,0,0,0"
                                           />
                                <TextBox Grid.Row="1"
                                         BorderThickness="1" 
                                         BorderBrush="{StaticResource AccentColorBrush}"
                                         x:Name="textBox_allMoves" 
                                         VerticalScrollBarVisibility="Auto"
                                         />
                            </Grid>
                        </Grid>
                    </controls:MetroTabItem>
                    <controls:MetroTabItem Header="#1" 
                                           controls:ControlsHelper.HeaderFontSize="18">
                        <Grid/>
                    </controls:MetroTabItem>
                </controls:MetroTabControl>
                <!--Moves Tab-->
            </controls:MetroTabItem>
            <!--Cameras Tab-->
            <controls:MetroTabItem Visibility="Visible"
                                   Header="Cameras">
                <controls:MetroTabControl Margin="10 10 10 10"
                                          ItemsSource="{Binding Cameras}"
                                          ContentTemplateSelector="{StaticResource MyDataTemplateSelector}">
                    <controls:MetroTabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </controls:MetroTabControl.ItemTemplate>

                </controls:MetroTabControl>

            </controls:MetroTabItem>
            <!--Server Tab-->
            <controls:MetroTabItem Visibility="Visible">
                <Grid Margin="10 10 10 10">

                </Grid>
            </controls:MetroTabItem>
        </controls:MetroTabControl>
    </Grid>
</UserControl>
